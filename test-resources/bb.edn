{:paths ["script"]
 :tasks {:bash        {:babashka/invoke {:fn cool-script/bash}}
         :eval-plus   {:babashka/args [-e (apply + (map (fn [i]
                                                          (Integer/parseInt i))
                                                        *command-line-args*))]}
         :tree        {:babashka/args [:clojure -Stree]}
         :all         {:babashka/args [:do :eval-plus 1 2 3
                                       :__ :tree
                                       :__ :bash "ls | wc -l"]}}}
